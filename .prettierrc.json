{
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
        "^vue",
        "^@vue",
        "<THIRD_PARTY_MODULES>",
        "^@app",
        "^@pages",
        "^@widgets",
        "^@features",
        "^@entities",
        "^@shared",
        "^@/assets",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "printWidth": 80,
    "tabWidth": 4,
    "trailingComma": "all",
    "singleQuote": false,
    "semi": true
}
